<h1>Conversations#index</h1>
<p>Find me in app/views/conversations/index.html.erb</p>


  <div class="column is-7">
    <h3 class="title is-3">Conversations</h3>
    <% @conversations.each do |conversation| %>
      <% if conversation.sender_id == current_user.id || conversation.recipient_id == current_user.id %>
        <% if conversation.sender_id == current_user.id %>
          <% recipient = User.find(conversation.recipient_id) %>
        <% else %>
          <% recipient = User.find(conversation.sender_id) %>
        <% end %>
        <% unless current_user.id == recipient %>
          <div class="columns">
            <div class="column">
                  <div class="inline-block">
                    <%= link_to "From: #{User.find(conversation.sender_id).email},
                                To: #{User.find(conversation.recipient_id).email}
                     Product: #{Product.find(conversation.product_id).title}", product_conversation_messages_path(conversation, conversation.product_id) %>
                  </div>
            </div>
          </div>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>