<div id="content">
  <div class="container">
    <div class="row">
    	<div class="col-sm-12 page-content">
				<a data-remote="true" href="/profile/cancel_profile_verification/<%= @request_id %>">
				  <i class="fa fa-home"></i> Cancel Profile Verification
				</a>
				<form method="POST" action="/profile/verify_profile" data-remote="true">
					<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
					<input type="hidden" name="request_id" value="<%= @request_id %>"/>
					<input type="text" name="verification_code" />
					<input type="submit" value="Send code" />
				</form>
			</div>
		</div>
	</div>
</div>

