<!-- Start Content -->
<div id="content">
  <div class="container">
    <div class="row">
      <%= render :partial => "profile/sidebar" %>
      <div class="col-sm-9 page-content">
        <div class="inner-box">
          <h2 class="title-2"><i class="fa fa-hourglass-o"></i> My Loan Requests </h2>
          <div class="table-responsive">
            <div class="table-action">
              <div class="checkbox">
                <label for="checkAll">
                  <input id="checkAll" type="checkbox">
                  Select: All | <a href="#" class="btn btn-xs btn-danger">Delete <i class="fa fa-close"></i></a>
                </label>
              </div>
              <div class="table-search pull-right col-xs-7">
                <div class="form-group">
                  <label class="col-xs-5 control-label text-right">Search <br>
                    <a title="clear filter" class="clear-filter" href="#clear">[clear]</a> 
                  </label>
                  <div class="col-xs-7 searchpan">
                    <input class="form-control" id="filter" type="text">
                  </div>
                </div>
              </div>
            </div>
            <table class="table table-striped table-bordered add-manage-table">
              <thead>
                <tr>
                  <th data-type="numeric"></th>
                  <th>Photo</th>
                  <th>Adds Details</th>
                  <th>Option</th>
                </tr>
              </thead>
              <tbody>
                <% if !@my_asks.nil? %>
                  <% @my_asks.each do |loan_ask| %>
                    <% if !loan_ask.nil? %>
                      <% product = loan_ask.product %>
                        <tr>
                          <td class="add-img-selector">
                            <div class="checkbox">
                              <label>
                                <input type="checkbox">
                              </label>
                            </div>
                          </td>
                          <td class="add-img-td">
                            <a href="/products/<%= product.id %>">
                              <% product.uploads.each do |u| %>
                                <%= image_tag u.variant(resize: "50x50") %>
                              <% end %>
                            </a>
                          </td>
                          <td class="ads-details-td">
                            <h4>
                              <a href="/products/<%= product.id %>">
                                <%= loan_ask.product.title.capitalize %>
                              </a>
                            </h4>
                            <p> <strong> Posted On </strong>:
                            02-Oct-2017, 04:38 PM </p>
                            <p> <strong>Visitors </strong>: 221 <strong>Located In:</strong> New York </p>
                          </td>
                          <td class="action-td">
                            <% if loan_ask.receiver_id != current_user.id %>
                              <p>
                                <a href="/loan-refuse/<%= loan_ask.id %>" data-remote="true" class="btn btn-danger btn-xs">
                                  <i class=" fa fa-trash"></i>
                                  Refuse
                                </a>
                              </p>
                            <% end %>
                          </td>
                        </tr>
                        <% end %>
                      <% end %>
                  <% end %>
                </tbody>
            </table>
          </div>               
        </div>
      </div>
    </div>  
  </div>      
</div>