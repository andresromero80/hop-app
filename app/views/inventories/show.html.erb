      		<% @products.each do |p| %>
      			<tr>
      				<td class="col-sm-3 text-center">
      					<%= p.title.capitalize %>
		      		</td>

		      		<td class="col-sm-3 text-center no-padding photobox">
		      			<a href="/products/<%= p.id %>" class="nav-link">
			        		<% p.uploads.each do |u| %>
			        			<%= image_tag u.variant(resize: "250x250") %>
			        		<% end %>
		        		</a>
		      		</td>
	      			<td class="col-sm-3 text-right text-center">
	      				<ul>
									<li>
										<%= link_to "Edit", edit_product_path(p), class: "nav-link" %>
									</li>
									<li>
										<a href="/loans/ask/<%= @inventory.user_id %>/<%= p.id %>" class="nav-link">
										Ask for loaning
										</a>
									</li>
								</ul>
							</td>
						</tr>
					<% end %>
      	</tbody>
      </table>
      </div>
		</div>
	</div>
