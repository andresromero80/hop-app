<section class="grid-category">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="box-title no-border">
          <div class="inner">
          	<nav id="inventory-navigation-bar">
							<a style="color: white" href="/products/new" class="btn btn-common btn-lg "> Share Product </a>
						</nav>
            <h3 class="section-title text-center"><span> Mon Inventaire </span></h3>

          </div>
