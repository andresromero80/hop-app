<!-- Start Content -->
<div id="content">
  <div class="container">
    <div class="row">
      <!-- Product Info Start -->
      <div class="product-info">
        <div class="col-sm-8">
          <div class="inner-box ads-details-wrapper">
            <h2>
              <% if @product.inventory.user.id == current_user.id %>
                  <%= link_to "Edit Product", edit_product_path(@product) %>
              <% else %>
                <a href="/loans/ask/<%= @inventory.user_id %>/<%= @product.id %>" class="btn btn-default">
                  Demande de pret
                </a>
              <% end %>
            </h2>
            
            <h2>
              <%= @product.title %>
            </h2>
            <div class="blockquote-footer"> by: <%= @user.email %>
              <cite title="Source Title">on <%= @product.updated_at %></cite>
            </div>
            <% if !@product.uploads.nil? %>
              <% @product.uploads.each do |u| %>
                <div id="owl-demo" class="owl-carousel owl-theme">
                  <div class="item">
                    <img src="https://cdn.pixabay.com/photo/2016/06/18/17/42/image-1465348_960_720.jpg" />
                    <%= image_tag u.variant(resize: "250x250") %>
                  </div>
                </div>
              <% end %>
            <% end %>
          </div>

          <div class="box">
            <h2 class="title-2"><strong>Product Details</strong></h2>
              <div class="row">
                <div class="ads-details-info col-md-8">
                  <p class="mb15"><%= @product.long_desc %></p>
                  <ul class="list-circle">
                    <li><i class="fa fa-check-circle"></i> 256GB PCIe flash storage</li>
                  </ul>
                </div>
                <div class="col-md-4">
                  <aside class="panel panel-body panel-details">
                    <ul>
                      <li>
                        <p class=" no-margin "><strong>Durée du prêt:</strong> de.. à..</p>
                      </li>

                      <li>
                        <p class="no-margin"><strong>Type:</strong> <a href="#">Electronics</a></p>
                      </li>

                      <li>
                        <p class="no-margin"><strong>Location:</strong> <a href="#">New York</a></p>
                      </li>

                      <li>
                        <p class=" no-margin "><strong>States:</strong> New</p>
                      </li>

                      <li>
                        <p class="no-margin"><strong>Brand:</strong> <a href="#">Apple</a></p>
                      </li>
                    </ul>
                  </aside>
                </div>

                <div class="ads-action">
                  <ul class="list-border">
                    <li>
                      <a href="#">
                        Posted by <i class=" fa fa-user"></i> <%= @user.email %>
                      </a>
                    </li>

                    <li>
                      <a href="#">
                        <i class=" fa fa-heart"></i> Save ad
                      </a>
                    </li>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="col-sm-4">
          <div class="inner-box">
            <div class="widget-title">
              <h4>Advertisement</h4>
            </div>
            <img src="assets/img/img1.jpg" alt="">
          </div>

          <div class="col-xs-12">
            <div class="features-box wow fadeInDownQuick" data-wow-delay="0.3s">
            <div class="features-icon">
              <i class="lnr lnr-star">
              </i>
            </div>
            <div class="features-content">
              <h4>
                Fraud Protection
              </h4>
              <p>
                Lorem ipsum dolor sit amet, consectetur adipisicing elit. Quo aut magni perferendis repellat rerum assumenda facere. 
              </p>
            </div>
          </div>
        </div>
        <div class="col-xs-12">
          <div class="features-box wow fadeInDownQuick" data-wow-delay="0.6s">
            <div class="features-icon">
              <i class="lnr lnr-chart-bars"></i>
            </div>
            <div class="features-content">
              <h4>
