<!-- Container -->
<div class="card">
  <div class="card-header">
    <h3><%= @product.title %></h3>
  </div>
  <div class="card-body">
    <blockquote class="blockquote mb-0">
      <p><%= @product.long_desc %></p>
      <footer class="blockquote-footer"> by: <%= @product.title %> <cite title="Source Title">on <%= @product.updated_at %></cite></footer>
    </blockquote>
  </div>
</div>

