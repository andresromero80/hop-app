  <%= form_for @product do |f| %>
	  <%= f.label :uploads %>
	  <%= f.file_field :uploads, multiple: true %>

	
		<%= f.collection_select(:categories, @categories, :id, :name, {}, :multiple => true) %>

	  <%= f.label :title %>
	  <%= f.text_field :title %>

	  <%= f.label :short_desc %>
	  <%= f.text_field :short_desc %>

	  <%= f.label :long_desc %>
	  <%= f.text_field :long_desc %>

	  <%= f.label :brand %>
	  <%= f.text_field :brand %>

	  <%= f.label :state %>
	  <%= f.select :state, @states %>

	  <%= f.submit %>
  <% end %>