<!-- Page Header Start -->
<div class="page-header" style="background-color: #1E90FF;">
  <div class="container">
    <div class="row">         
      <div class="col-md-12">
        <div class="breadcrumb-wrapper">
          <h2 class="page-title">S'inscrire</h2>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- Page Header End --> 

<!-- Content section Start --> 
<section id="content">
  <div class="container">
    <div class="row">
      <div class="col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
        <div class="page-login-form box">
          <h3>
            Register
          </h3>
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

            <div class="form-group">
              <div class="input-icon">
                <%= f.text_field :firstname, required: true , autofocus: true, input_html: { autocomplete: "firstname" }, class: 'form-control', placeholder: "Firstname" %>
              </div>
            </div>

            <div class="form-group">
              <div class="input-icon">
                <%= f.text_field :lastname, required: true , autofocus: true, input_html: { autocomplete: "lastname" }, class: 'form-control', placeholder: "Lastname" %>
              </div>
            </div>

            <div class="form-group">
              <div class="input-icon">
                <%= f.text_field :number, required: true , autofocus: true, input_html: { autocomplete: "number" }, class: 'form-control', placeholder: "Number" %>
              </div>
            </div> 
            
            <div class="form-group">
              <div class="input-icon">
                    <%= f.email_field :email, required: true , autofocus: true, input_html: { autocomplete: "email" }, class: 'form-control', placeholder: "Email" %>
              </div>
            </div> 

            <div class="form-group">
              <div class="input-icon">
                <%= f.password_field :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), input_html: { autocomplete: "new-password" }, class: 'form-control', placeholder: "Password" %>
              </div>
            </div>
            <div class="form-group">
              <div class="input-icon">
                <%= f.password_field :password_confirmation, required: true, input_html: { autocomplete: "new-password" }, class: 'form-control', placeholder: "Password Confirmation" %>
              </div>
            </div>

            <div class="form-group">
              <h3> Address </h3>
                <div class="input-icon">
                  <%= f.fields_for :address do |form| %>
                    <%= form.text_field :street, placeholder: "Number & Street", class: 'form-control' %>
                    <br>
                    <%= form.text_field :city, placeholder: "City", class: 'form-control' %>
                    <br>
                    <%= form.text_field :postal_code, placeholder: "Postal Code", class: 'form-control' %>
                    <br>
                    <%= form.text_field :country, placeholder: "Country", class: 'form-control' %>
                  <% end %>
                </div>
            </div>

            <div class="checkbox">
              <input type="checkbox" id="remember" name="rememberme" value="forever" style="float: left;">
              <label for="remember"> By creating account you agree to our Terms & Conditions </label>
            </div>

            <%= f.submit "Register", class: 'btn btn-common log-btn' %>
            <% end %>
            <div class="form-links">
            <%= render "devise/shared/links" %>
            </div>
        </div>
      </div>
    </div>
  </div>
</section>
<!-- Content section End -->

