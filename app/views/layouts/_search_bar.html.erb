<form class="search-form" action="/products-search" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <div class="col-md-12 col-sm-6 search-col">
    <div class="col-md-3 col-sm-6 search-col">
      <input class="form-control" name="search[location]" type="text" value="" placeholder="Distance maximale (km)" />
    </div>  
    
    <div class="col-md-3 col-sm-6 search-col">
      <div class="input-group-addon search-category-container">
        <label class="styled-select">
          <select class="dropdown-product selectpicker" multiple="true" name="search[categories][]" >
            <% @categories.each do |c| %>
              <option value="<%= c.id %>"> <%= c.name %> </option>
            <% end %>
          </select>
        </label>
      </div>
    </div>
    <div class="col-md-3 col-sm-6 search-col">
      <input class="form-control keyword" name="search[keyword]" value="" placeholder="Enter Keyword" type="text">
      <i class="fa fa-search"></i>
    </div>
    <div class="col-md-3 col-sm-6 search-col">
      <button type="submit" class="btn btn-common btn-search btn-block">
        <strong>Search</strong>
      </button>
    </div>
  </div>
</form>